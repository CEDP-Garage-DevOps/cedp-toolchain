{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"messages": {
		"$i18n": "locales.yml"
	},
	"title": {
		"$ref": "#/messages/deploy.title"
	},
	"description": {
		"$ref": "#/messages/deploy.description"
	},
	"longDescription": {
		"$ref": "#/messages/deploy.longDescription"
	},
	"type": "object",
	"properties": {
		"func-user": {
			"type": "string",
			"disabled": false
		},
		"func-pass": {
			"type": "string",
			"disabled": false,
			"pattern": "\\S"
		},
		"af-psw": {
			"type": "string",
			"disabled": false,
			"pattern": "\\S"
		},
		"docker-username": {
			"type": "string",
			"disabled": false
		},
		"docker-password": {
			"type": "string",
			"disabled": false,
			"pattern": "\\S"
		},
		"docker-registry": {
			"type": "string",
			"disabled": false,
			"pattern": "\\S"
		},
		"sonar-devop-token": {
			"type": "string",
			"disabled": false,
			"pattern": "\\S"
		},
		"docker-image-name": {
			"type": "string",
			"disabled": false
		},
		"input-git-branch": {
			"type": "string",
			"disabled": false
		}

	},
	"required": ["af-psw", "input-git-branch", "docker-image-name", "sonar-devop-token", "docker-registry", "docker-password", "docker-username", "func-pass", "func-user"],
	"form": [{
		"type": "table",
		"columnCount": 3,
		"widths": ["45%", "10%", "45%"],
		"items": [{
			"type": "label",
			"title": "Git Input Branch"
		}, {
			"type": "label",
			"title": ""
		}, {
			"type": "label",
			"title": "Pipeline Image"
		},  {
			"type": "text",
			"key": "input-git-branch",
			"readonly": false
		}, {
			"type": "label",
			"title": ""
		}, {
			"type": "text",
			"key": "docker-image-name",
			"readonly": false
		}
		]
	},{
		"type": "table",
		"columnCount": 3,
		"widths": ["45%", "10%", "45%"],
		"items": [{
			"type": "label",
			"title": "Function UserName"
		}, {
			"type": "label",
			"title": ""
		}, {
			"type": "label",
			"title": "Function Password"
		},  {
			"type": "text",
			"key": "func-user",
			"readonly": false
		}, {
			"type": "label",
			"title": ""
		}, {
			"type": "password",
			"key": "func-pass",
			"readonly": false
		}
		]
	}, {
		"type": "table",
		"columnCount": 3,
		"widths": ["45%", "10%", "45%"],
		"items": [{
			"type": "label",
			"title": "Sonar DevOps Token"
		}, {
			"type": "label",
			"title": ""
		}, {
			"type": "label",
			"title": "AF Password"
		},  {
			"type": "password",
			"key": "sonar-devop-token",
			"readonly": false
		}, {
			"type": "label",
			"title": ""
		}, {
			"type": "password",
			"key": "af-psw",
			"readonly": false
		}
		]
	}, {
		"type": "table",
		"columnCount": 3,
		"widths": ["45%", "10%", "45%"],
		"items": [{
			"type": "label",
			"title": "Docker Username"
		}, {
			"type": "label",
			"title": ""
		}, {
			"type": "label",
			"title": "Docker Password"
		}, {
			"type": "text",
			"key": "docker-username",
			"readonly": false
		}, {
			"type": "label",
			"title": ""
		}, {
			"type": "password",
			"key": "docker-password",
			"readonly": false
		}
		]
	}, {
		"type": "table",
		"columnCount": 3,
		"widths": ["45%", "10%", "45%"],
		"items": [{
			"type": "label",
			"title": "Docker Registry"
		}, {
			"type": "text",
			"key": "docker-registry",
			"readonly": false
		}
		]
	}, {
		"type": "table",
		"columnCount": 1,
		"widths": ["100%"],
		"items": [{
			"type": "label",
			"title": {
				"$ref": "#/messages/deploy.clusterDescription"
			}
		}
		]
	}, {
		"type": "table",
		"columnCount": 1,
		"widths": ["100%"],
		"items": [{
			"type": "label",
			"title": {
				"$ref": "#/messages/deploy.clusternsDescription"
			}
		}
		]
	}
	]
}